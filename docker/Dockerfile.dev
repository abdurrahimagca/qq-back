FROM golang:1.24

WORKDIR /app

# Install air for live reloading and other dev dependencies including libvips
RUN apt-get update && apt-get install -y git ca-certificates tzdata libvips-dev pkg-config && \
    go install github.com/air-verse/air@v1.61.5 && \
    go install github.com/sqlc-dev/sqlc/cmd/sqlc@latest && \
    go install -tags 'postgres' github.com/golang-migrate/migrate/v4/cmd/migrate@latest

# Copy go mod files
COPY go.mod ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 3003

# Default command (can be overridden)
CMD ["air", "-c", ".air.toml"]